<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guizhigang.multimediatestset">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImageMediaTest"
            android:label="@string/title_activity_image_media_test"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".WelcomActivity"
            android:label="@string/title_activity_image_media_test"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".CaptureImageCamera"
            android:label="@string/title_activity_image_media_test"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".CaptureVideoCamera"
            android:label="@string/title_activity_image_media_test"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".ImageBigMediaTest"
            android:screenOrientation="landscape"
            android:configChanges="orientation"
            android:label="@string/title_activity_image_media_test"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
